<% provide(:title, 'Reset password') %>
<div class="login_page_cover">
  <div class="login_page">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="title">
          <div class="float_jp">
            パスワード再設定
          </div>
          <div class="base_en">
            Reset Password
          </div>
        </div>
        <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

          <%= hidden_field_tag :email, @user.email %>
          <div class="input-groups">
            <div class="input_title">
              <div class="float_jp">
                パスワード
              </div>
              Password
            </div>
            <div class="">
              <%= f.password_field :password, class: 'form-control input_form' %>
            </div>
          </div>
          <div class="input-groups">
            <div class="input_title">
              <div class="float_jp">
                パスワード確認
              </div>
              Password Confirmation
            </div>
            <div class="">
              <%= f.password_field :password_confirmation, class: 'form-control input_form' %>
            </div>
          </div>
          <div class="submit_button_cover">
            <button type="submit"class="submit_button btn btn-default">
              <div class="float_jp">
                保存
              </div>
              <div class="base_en">
                Save
              </div>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
